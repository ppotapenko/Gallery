@using Gallery.Core.Domain;
@using Gallery.Core.Domain.SearchCriteria;
@using Gallery.Helpers.Models;

@model PagedFilterViewModel<Image, ImageSearchCriteria>

@{
    Layout = "~/Views/Shared/_ImageLayout.cshtml";
}
@section Title
{
    @ViewBag.Title
}
@section Styles
{
    <link href="~/Content/css/uikit/addons/uikit.addons.css" type="text/css" rel="stylesheet"/>
}
<div class="uk-panel uk-panel-box panel-box" id="filter">
    <div class="form-column uk-form-stacked">
        <div class="uk-form-row uk-form">
            <label class="uk-form-label">Описание картинки</label>
            <div class="uk-form-controls">
                @Html.TextBoxFor(t => t.State.Description, new { @class = "uk-form-small uk-width-9-10", maxlength = 50 })
            </div>
        </div>
    </div>
    <div class="uk-grid uk-margin-top button-container uk-width-1-3 uk-text-right">
        <button class="uk-button uk-button-small  uk-margin-top" onclick="REKOD.Client.Servers.clearFilter()">Сброс</button>
        <button class="uk-button-success uk-button uk-button-small uk-margin-top" onclick="REKOD.Client.Servers.applyFilter()">Поиск</button>
    </div>
</div>
<div id="images">
    @Html.Partial("ImageListPartial", Model.Items)
</div>
<div id="throbber">
    <i class="uk-icon-spinner uk-icon-spin"></i>
</div>
@section Scripts
{
    <script type="text/javascript">
        REKOD.Client.LazyLoadingContent.init('@Url.Action("ImageListPartial", "Image")', '#images');
    </script>
}

