<!DOCTYPE html>
<html lang="ru">
    <head>
        <title>@RenderSection("Title", false)</title>
        <meta charset="utf-8">
        <link href="~/Content/css/uikit/uikit.almost-flat.css" type="text/css" rel="stylesheet"/>
        <link href="~/Content/css/custom/client.css" type="text/css" rel="stylesheet"/>
        @RenderSection("Styles", false)
    </head>
    <body>
        <nav class="uk-navbar uk-navbar-attached tm-nav fixed">
            <div class="uk-container uk-container-center">
                <div class="uk-grid">
                    <div class="uk-width-1-2">
                        <div class="uk-float-right">
                            <button data-uk-tooltip="" class="uk-button uk-icon-filter uk-button-success filter-button" title="Фильтр" id="filter-button"></button>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="container-fluid">
            @Html.Partial("_UIKitFlash")
            <div class="center">
                <h2>@ViewBag.Title</h2>
                @RenderBody()
            </div>
            <div id="throbberFull"></div>
            <div id="throbberFull-image">
                <img src="~/Content/img/ajax_loader_blue_32.gif" alt="throbber">
            </div>
        </div>
        <script src="~/Scripts/jquery/jquery-1.8.2.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery/jquery.cookie.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery/jquery.tmpl.js" type="text/javascript"></script>
        <script src="~/Scripts/uikit/uikit.min.js" type="text/javascript"></script>
        <script src="~/Scripts/custom/client.js" type="text/javascript"></script>
        <script type="text/javascript">
            REKOD.Client.init('@Convert.ToString(ViewContext.RouteData.Values["action"]).ToUpper()');
            REKOD.Client.registerFilterUIBehavior();
        </script>
        @RenderSection("Scripts", false)
    </body>
</html>
<div id="dlg-confirm" class="uk-modal">
    <div class="uk-modal-dialog">
        <div class="uk-alert uk-alert message-offset"></div>
        <div class="uk-clearfix">
            <div class="uk-float-right">
                <a href="#" class="uk-button uk-button-primary" id="act_confirm_ok">
                    <i class="uk-icon-check"></i>
                    Да
                </a>
                <a href="#" class="uk-button uk-modal-close" id="act_confirm_cancel">
                    <i class="uk-icon-times"></i>
                    Нет
                </a>
            </div>
        </div>
    </div>
</div>
<div id="dlg-message" class="uk-modal">
    <div class="uk-modal-dialog">
        <div class=" uk-alert uk-alert message-offset"></div>
        <div class="uk-clearfix">
            <div class="uk-float-right">
                <a href="#" class="uk-button" id="act_message_ok">
                    <i class="uk-icon-times"></i> Закрыть
                </a>
            </div>
        </div>
    </div>
</div>
<div id="dlg-error" class="uk-modal">
    <div class="uk-modal-dialog">
        <div class=" uk-alert uk-alert-danger message-offset"></div>
        <div class="uk-clearfix">
            <div class="uk-float-right">
                <a href="#" class="uk-button uk-modal-close" id="act_error_close">
                    <i class="uk-icon-times"></i> Закрыть
                </a>
            </div>
        </div>
    </div>
</div>
